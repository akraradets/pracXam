<br>

<!-- Discussion -->
<% @paper.discussions.each do |discussion| %>
  <div class="card"">
    <div class="card-body">
      <% if discussion.is_owner? current_user %>
        <div class="float-right">
          <a id='<%= "discussion-#{discussion.id}" %>' href="javascript:void(0)" style="padding: 0px;"><i class="fas fa-edit"></i></a>
