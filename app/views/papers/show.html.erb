              <button id='comment-for-<%= discussion.id %>' class="btn btn-outline-secondary" type="submit" name="commit">
                <i class="far fa-paper-plane" style="margin-right: 10px;"></i>Save
              </button>
            </div>
          </div>
        <% end %>
