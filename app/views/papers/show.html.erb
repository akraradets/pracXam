                <span id="total-dislike">0</span>
              </span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-2"></div>
          <!-- Like and Dislike bar -->
          <div class="col col-lg-2">
            <div class="progress" style="height: 5px; margin: 0px;">
